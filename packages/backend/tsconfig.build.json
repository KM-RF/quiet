{
  "extends": "../../tsconfig.build.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "typeRoots": [
      "../@types",
      "./node_modules/@types"
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "src/**/*.test.ts"
  ]
}