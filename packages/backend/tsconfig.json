{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./lib",
    "target": "ES2020",
    // "noImplicitAny": true,
    "noImplicitThis": true,
    // "alwaysStrict": true,
    // "strictBindCallApply": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "module": "ES2022",
    "typeRoots": [
      "../@types",
      "./node_modules/@types"
    ],
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
